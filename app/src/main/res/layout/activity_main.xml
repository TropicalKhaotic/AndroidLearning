<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_blue"
    android:padding="10dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/calculation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calculations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textAlignment="textStart"
                android:text=""
                android:textColor="@color/white"
                android:textSize="40sp">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_above="@+id/buttons">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="40sp">
            </TextView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/test">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            >

            <Button
                android:id="@+id/ac_button"
                style="@style/Button_op"
                android:text="@string/ac"
                android:textColor="@color/white"
                >

            </Button>

            <Button
                android:id="@+id/backspace"
                style="@style/Button_op"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/ac_button"

                >

            </Button>

            <Button
                android:id="@+id/percent_button"
                style="@style/Button_op"
                android:text="@string/percentage"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/backspace"
                >

            </Button>

            <Button
                android:id="@+id/division_button"
                style="@style/Button_op"
                android:text="@string/division"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/percent_button"
                >

            </Button>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_below="@+id/line1"
            >

            <Button
                android:id="@+id/seven"
                style="@style/Button_1"
                android:text="@string/Num_7"
                >

            </Button>

            <Button
                android:id="@+id/eight"
                style="@style/Button_1"
                android:text="@string/Num_8"
                android:layout_toEndOf="@id/seven"
                >

            </Button>

            <Button
                android:id="@+id/nine"
                style="@style/Button_1"
                android:layout_toEndOf="@id/eight"
                android:text="@string/Num_9"
                >

            </Button>

            <Button
                android:id="@+id/multiplication_button"
                style="@style/Button_op"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/nine"
                android:text="@string/multiplication">

            </Button>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_below="@+id/line2"
            >

            <Button
                android:id="@+id/four"
                android:text="@string/Num_4"
                style="@style/Button_1"
                >

            </Button>

            <Button
                android:id="@+id/five"
                style="@style/Button_1"
                android:text="@string/Num_5"
                android:layout_toEndOf="@id/four"
                >

            </Button>

            <Button
                android:id="@+id/six"
                style="@style/Button_1"
                android:text="@string/Num_6"
                android:layout_toEndOf="@id/five"
                >

            </Button>

            <Button
                android:id="@+id/minus_button"
                style="@style/Button_op"
                android:text="@string/minus"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/six"
                >

            </Button>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_below="@+id/line3"
            >

            <Button
                android:id="@+id/one"
                style="@style/Button_1"
                android:text="@string/Num_1">

            </Button>

            <Button
                android:id="@+id/two"
                style="@style/Button_1"
                android:text="@string/Num_2"
                android:layout_toEndOf="@id/one"
                >

            </Button>

            <Button
                android:id="@+id/three"
                style="@style/Button_1"
                android:text="@string/Num_3"
                android:layout_toEndOf="@id/two"
                >

            </Button>

            <Button
                android:id="@+id/sum_button"
                style="@style/Button_op"
                android:text="@string/sum"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/three"
                >

            </Button>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_below="@+id/line4"
            >

            <Button
                android:id="@+id/backspace_2"
                style="@style/Button_op"
                android:textColor="@color/white"
                android:text="@string/delete"
                >

            </Button>

            <Button
                android:id="@+id/zero"
                style="@style/Button_1"
                android:text="@string/Num_0"
                android:layout_toEndOf="@id/backspace_2"
                >

            </Button>

            <Button
                android:id="@+id/dot_button"
                style="@style/Button_1"
                android:layout_toEndOf="@id/zero"
                android:text="@string/dot"
                >

            </Button>

            <Button
                android:id="@+id/equals_button"
                style="@style/Button_op"
                android:text="@string/equals"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/dot_button"
                >

            </Button>



        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>